.container {
  height: 100%;
  width: 100%;
}
.target_play{
  width: 100%;
  height: 300rpx;
  background-color: #42C6C8;
  line-height: 300rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
}
.target_text{
  flex: 1;
  text-align: center;
}
.target_text text{
  font-size: 40rpx;
}
.target_icon{
  flex: 1;
  text-align: center;
  margin-top: 40rpx;
}
.target_icon image{
  width: 120rpx;
  height: 120rpx;
  
}
.target_input{
  padding: 20px;
  font-size: 35rpx;
}
.test{
  position: fixed;
  top: 7%;
  right:17%;
  font-size: 25rpx;
}

.target_input input{
border: 1rpx solid #DADBDC;
 margin-top: 10rpx;
 height: 80rpx;
 line-height: 80rpx;
 border-radius: 10rpx;
 width: 95%;
 margin-bottom: 50rpx;
 font-size: 30rpx;
 padding-left: 20rpx;
}
.target_input textarea{
border: 1rpx solid #DADBDC;
 margin-top: 10rpx;
 height: 150rpx;
 border-radius: 10rpx;
 width: 95%;
 margin-bottom: 20rpx;
 font-size: 30rpx;
 padding-left: 20rpx;
}
.target_footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  border: 0;
  text-align: center;
}
.target_footer text{
  font-size: 30rpx;
  padding: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #42C6C8;
  color: #fff;
  width: 100%;
  display: inline-block;
}
