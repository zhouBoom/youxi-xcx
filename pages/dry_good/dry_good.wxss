.summary{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.summary view>text:nth-last-of-type(2){
  color: #fff;
  background-color: #42C6C8;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
  margin: 10rpx 0;
  display: inline-block;
  border-radius: 40rpx;
}
.summary view>text:nth-last-of-type(1){
  color: #9E9F9F;
  font-size: 25rpx;
  padding: 15rpx 20rpx;
  margin: 10rpx 0;
  display: block;
  border-radius: 20rpx;
  /*padding: 25rpx;*/
}
.summary view view>text:nth-last-of-type(1){
  color: #42C6C8;
}
