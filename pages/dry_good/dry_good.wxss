.container {
  height: 100%;
  display: flex;
  width: 100%;
  background-color: #fff;
  flex-direction: column;  
  min-height: 1300rpx;
}
.good_title{
  padding: 20rpx;
  margin-top: 40rpx;
}
.good_title > text:nth-of-type(1){
  font-size: 30rpx;
}
.good_title > text:nth-of-type(2){
  font-size: 20rpx;
  color: #9E9F9F;
}
.good_list input{
  border: 1rpx solid #DADBDC;
 margin-top: 10rpx;
 height: 80rpx;
 line-height: 80rpx;
 border-radius: 10rpx;
 width: 90%;
 font-size: 30rpx;
 margin-left: 5%;
 margin-top: 40rpx;
 padding-left: 20rpx;
 font-size: 30rpx;
}
.good_tool{
  display: flex;
}
.good_tool image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 40rpx;
  display: inline-block;
  margin-top: 20rpx;
}
.good_tool text{
  font-size: 30rpx;
  padding: 10rpx 15rpx;
  border: 1rpx solid #42C6C8;
  margin-left: 40rpx;
  background-color: #fff;
  color: #42C6C8;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.target_footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  border: 0;
  display: flex;
   text-align: center;
}
.target_footer > text:nth-of-type(1){
  font-size: 30rpx;
  padding: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #F0F1F2;
  color: #000;
  width: 50%;
  display: inline-block;
}
.target_footer > text:nth-of-type(2){
  font-size: 30rpx;
  padding: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #42C6C8;
  color: #fff;
  width: 50%;
  display: inline-block;
}
