.play_view{
  width: 180rpx;
  text-align: right;
  position: relative;
}
.play_view image{
  width: 30rpx;
  height: 40rpx;
  position: absolute;
  left: 30%;
  top: 50%;
  margin-top: -20rpx;
}
.play{
  border: 1px solid #42C6C8;
  color: #42C6C8;
}
